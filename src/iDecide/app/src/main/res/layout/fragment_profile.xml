<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_profile"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentProfile">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="430dp"
        android:layout_gravity="bottom"
        android:clipToPadding="false">

        <View
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:background="@drawable/profile_background"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="160dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/round_shape"
            android:orientation="vertical"
            android:elevation="2dp">

            <TextView
                android:id="@+id/nickname_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NICKNAME"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="80dp"
                android:textColor="@color/colorDarkGray"
                android:textSize="30dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/age_gender_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="00세 · 성별"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:textColor="@color/colorGray"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/email_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="emailaddress@email.com"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/colorGray"
                android:textSize="17dp" />
        </LinearLayout>

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="95dp"
            android:src="@drawable/ryan"
            android:elevation="4dp"/>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="bottom">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="계정 설정"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="15dp"
            android:textSize="20dp"
            android:textColor="@color/colorFont" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/round_shape"
            android:elevation="2dp">

            <Button
                android:id="@+id/editButton_profile"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:textSize="20dp"
                android:textColor="@color/colorFont"
                android:text="개인정보 수정"
                style="@style/Widget.MaterialComponents.Button.TextButton"/>

            <Button
                android:id="@+id/optionButton_profile"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:textSize="20dp"
                android:textColor="@color/colorFont"
                android:text="검색기록 저장 옵션"
                style="@style/Widget.MaterialComponents.Button.TextButton"/>

            <Button
                android:id="@+id/logoutButton_profile"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:textSize="20dp"
                android:textColor="@color/colorFont"
                android:text="로그아웃"
                style="@style/Widget.MaterialComponents.Button.TextButton"/>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>