<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".getPreferences.p3_usage"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:orientation="vertical"
        android:layout_weight="1"
        android:gravity="center">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="27dp"
            android:fontFamily="@font/dotumbold"
            android:text="주 용도를 선택해주세요"
            android:textColor="@color/colorFont"
            android:layout_gravity="center"
            android:gravity="center"/>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="50dp"
            android:id="@+id/radio_usage">


            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/usage_0"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/preference_bg"
                android:button="@drawable/preference_button"
                android:checked="false"
                android:textSize="17dp"
                android:text="게임"/>

            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/usage_1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/preference_bg"
                android:button="@drawable/preference_button"
                android:checked="false"
                android:textSize="17dp"
                android:text="문서작성"
                android:layout_marginTop="20dp"/>

            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/usage_2"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/preference_bg"
                android:button="@drawable/preference_button"
                android:checked="false"
                android:textSize="17dp"
                android:text="음악 또는 동영상 재생"
                android:layout_marginTop="20dp"/>

            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/usage_3"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/preference_bg"
                android:button="@drawable/preference_button"
                android:checked="false"
                android:textSize="17dp"
                android:text="사진 또는 동영상 편집"
                android:layout_marginTop="20dp"/>

            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/usage_4"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/preference_bg"
                android:button="@drawable/preference_button"
                android:checked="false"
                android:textSize="17dp"
                android:text="기타"
                android:layout_marginTop="20dp"/>

        </RadioGroup>

    </LinearLayout>

    <Button
        android:id="@+id/button_usage"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/button_round"
        android:text="다음"
        android:textSize="17dp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:layout_marginBottom="40dp"
        android:layout_weight="0"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"/>

</LinearLayout>